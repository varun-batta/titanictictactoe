<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.varunbatta.titanictictactoe"
    android:versionCode="13"
    android:versionName="13.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    <application android:name="com.varunbatta.titanictictactoe.TitanicTicTacToe" android:allowBackup="true" android:icon="@drawable/test_icon3" android:label="@string/app_name" android:theme="@style/AppTheme">
        <service android:name="com.varunbatta.titanictictactoe.NotificationService"
            	 android:enabled="true"
            	 android:exported="false"></service>
        <activity android:name="com.varunbatta.titanictictactoe.Index" android:label="@string/app_name" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.varunbatta.titanictictactoe.LevelMenu" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity android:name="com.varunbatta.titanictictactoe.Instructions" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
	        <activity 
	            android:name="com.varunbatta.titanictictactoe.Board" 
	            android:screenOrientation="portrait" 
	            android:configChanges="keyboardHidden|orientation|screenSize">
	            <meta-data
	        		android:name="android.support.PARENT_ACTIVITY"
	        		android:value="com.varunbatta.titanictictactoe.Index"/>
        </activity>
        <activity android:name="com.varunbatta.titanictictactoe.PlayerNames" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity android:name="com.varunbatta.titanictictactoe.PlayGame" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>        
        <activity android:name="com.varunbatta.titanictictactoe.CurrentGames" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity android:name="com.varunbatta.titanictictactoe.MainMenu" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity android:name="com.varunbatta.titanictictactoe.Winner" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
        <meta-data android:name="com.google.android.gms.games.APP_ID" android:value="@string/app_id" />
    </application>

</manifest>
